<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="107.0" prefWidth="166.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.luishidalgoa.Nexa.Controller.OptionsPanel">
   <children>
      <VBox prefHeight="128.0" prefWidth="166.0" spacing="5.0">
         <children>
            <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" popupSide="RIGHT" prefHeight="40.0" prefWidth="200.0" text="Theme">
              <items>
                <MenuItem mnemonicParsing="false" text="Light" />
                <MenuItem mnemonicParsing="false" text="Dark" />
              </items>
               <VBox.margin>
                  <Insets top="2.0" />
               </VBox.margin>
            </MenuButton>
            <MenuButton contentDisplay="RIGHT" mnemonicParsing="false" popupSide="RIGHT" prefHeight="40.0" prefWidth="200.0" text="Language">
               <items>
                  <MenuItem fx:id="EN" mnemonicParsing="false" onAction="#handleEN" text="English" />
                  <MenuItem fx:id="ES" mnemonicParsing="false" onAction="#handleES" text="Spanish" />
               </items>
            </MenuButton>
            <Button mnemonicParsing="false" onAction="#logOut" prefHeight="36.0" prefWidth="166.0" style="-fx-text-fill: white; -fx-background-color: ff3200;" text="Log out" />
         </children>
      </VBox>
   </children>
</AnchorPane>
